<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/groupMem_leaderCard"
        android:layout_width="346dp"
        android:layout_height="151dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/navy_bg"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top|center"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/Lmem_id"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="ID: 1"
                android:textColor="@color/txtclr"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Lmem_perms"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_toEndOf="@+id/Lmem_id"
                android:text="Permission: \'A\'"
                android:textAlignment="center"
                android:textColor="@color/txtclr"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Lmem_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Lmem_id"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Lmem_username"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Lmem_perms"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="66dp"
                android:layout_toEndOf="@+id/Lmem_name"
                android:text="username"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/remove_groupMem_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="13dp"
                android:text="Remove" />

            <Button
                android:id="@+id/setLeader_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="64dp"
                android:layout_marginTop="59dp"
                android:text="Set group leader" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>