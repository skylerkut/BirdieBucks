<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/memCard1"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/navy_bg"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_gravity="left|center"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/mem_id"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="ID: 1"
                android:textColor="@color/txtclr"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mem_perms"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_toEndOf="@+id/mem_id"
                android:text="Permission: \'A\'"
                android:textAlignment="center"
                android:textColor="@color/txtclr"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mem_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/mem_id"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mem_username"
                android:layout_width="93dp"
                android:layout_height="35dp"
                android:layout_below="@+id/mem_perms"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="19dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="-1dp"
                android:layout_toEndOf="@+id/mem_name"
                android:text="username"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mem_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/mem_perms"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="-148dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="-3dp"
                android:layout_toEndOf="@+id/mem_username"
                android:gravity="center"
                android:text="money"
                android:textColor="@color/txtclr" />

            <TextView
                android:id="@+id/mem_numStocks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/mem_perms"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="-80dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/mem_username"
                android:gravity="center"
                android:text="numStocks"
                android:textColor="@color/txtclr" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>