<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <TextView
        android:id="@+id/article_title"
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:layout_margin="10dp"
        android:layout_marginTop="72dp"
        android:text="Loading..."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toTopOf="@+id/server_notes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newsPage_title"
        app:layout_constraintVertical_bias="0.135" />

    <TextView
        android:id="@+id/authors_txt"
        android:layout_width="134dp"
        android:layout_height="61dp"
        android:gravity="left"
        android:text="Authors: "
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65" />

    <TextView
        android:id="@+id/source_txt"
        android:layout_width="249dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:gravity="left"
        android:text="Publication Source: "
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.651" />

    <ImageView
        android:id="@+id/news_image"
        android:layout_width="349dp"
        android:layout_height="178dp"
        android:layout_margin="10dp"
        android:background="#FFFDFD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.464"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/newsPage_title"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="News"
        android:textColor="@color/txtclr"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/server_notes"
        android:layout_width="408dp"
        android:layout_height="48dp"
        android:text="Notes: "
        android:textSize="12sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/prev_newsPageBtn"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="93dp"
        android:backgroundTint="@color/navy_bg"
        android:text="Prev"
        android:textColor="@color/txtclr"
        app:layout_constraintBottom_toTopOf="@+id/article_title"
        app:layout_constraintEnd_toStartOf="@+id/next_newsPageBtn"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/next_newsPageBtn"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/navy_bg"
        android:text="Next"
        android:textColor="@color/txtclr"
        app:layout_constraintBottom_toTopOf="@+id/article_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/back_newsPageBtn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/background"
        android:text="Back"
        android:textColor="@color/txtclr"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/newsPage_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/summary_txt"
        android:layout_width="384dp"
        android:layout_height="177dp"
        android:text="Loading..."
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.913" />

    <TextView
        android:id="@+id/index_txt"
        android:layout_width="71dp"
        android:layout_height="37dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="0/50"
        app:layout_constraintBottom_toTopOf="@+id/article_title"
        app:layout_constraintEnd_toStartOf="@+id/next_newsPageBtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/prev_newsPageBtn"
        app:layout_constraintTop_toBottomOf="@+id/newsPage_title"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>